{%- for block in section.blocks -%}
    {%- if block.type == "buy_x_get_y" -%}
      {%- render 'mini-cart--gifts-buy-x-get-y', block: block -%}
    {%- elsif block.type == "min_spend" -%}
      {%- render 'mini-cart--gifts-min-spend', block: block -%}
