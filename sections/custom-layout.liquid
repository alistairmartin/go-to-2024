<style>
  #shopify-section-{{ section.id }} {
    --section-background: {{ section.settings.background }};

    --paddingVerticalMobile: {{ section.settings.padding_vertical_mobile }}px;
    --paddingHorizontalMobile: {{ section.settings.padding_horizontal_mobile }}px;

    --paddingVerticalDesktop: {{ section.settings.padding_vertical_desktop }}px;
    --paddingHorizontalDesktop: {{ section.settings.padding_horizontal_desktop }}px;
  }
</style>

<section> 


  {%- for block in section.blocks -%}
    {%- capture blockId -%}id="block-{{ block.id }}"{%- endcapture -%}


    {%- comment -%} CONTAINERS --- START  {%- endcomment -%}
    {% include "blocks--containers" %}
    {%- comment -%} CONTAINERS --- END  {%- endcomment -%}

    {%- comment -%} IMAGES --- START  {%- endcomment -%}
    {% include "blocks--images" %}
    {%- comment -%} IMAGES --- END  {%- endcomment -%}


  {%- endfor -%}



</section>


