<div class="routine-builder">
  <div class="routine-tabs">
    <button id="am-tab" class="routine-tab active">AM Routine</button>
    <button id="pm-tab" class="routine-tab">PM Routine</button>
  </div>

  <div class="routine-section" id="am-routine">
    <h3>AM Routine – The routine that helps you face the day</h3>
    <div class="routine-step">
      <label for="am-cleanse">Cleanse</label>
      <select id="am-cleanse" class="product-select" data-step="cleanse" data-time="am">
        <option value="">Select a cleanser</option>
        <option value="juicy-gel">Juicy Gel</option>
        <option value="properly-clean">Properly Clean</option>
      </select>
    </div>
    <div class="routine-step">
      <label for="am-treat">Treat</label>
      <select id="am-treat" class="product-select" data-step="treat" data-time="am">
        <option value="">Select a treatment</option>
        <option value="much-brighter-skin">Much Brighter Skin</option>
        <option value="much-plumper-skin">Much Plumper Skin</option>
        <option value="clarifying-face-hero">Clarifying Face Hero</option>
      </select>
    </div>
    <div class="routine-step">
      <label for="am-nourish">Nourish</label>
      <select id="am-nourish" class="product-select" data-step="nourish" data-time="am">
        <option value="">Select a moisturiser</option>
        <option value="very-luxe-face-cream">Very Luxe Face Cream</option>
        <option value="very-useful-face-cream">Very Useful Face Cream</option>
        <option value="very-lightweight-moisturiser">Very Lightweight Moisturiser</option>
      </select>
    </div>
    <div class="routine-step">
      <label for="am-protect">Protect</label>
      <select id="am-protect" class="product-select" data-step="protect" data-time="am">
        <option value="">Select an SPF</option>
        <option value="nifty-fifty">Nifty Fifty SPF</option>
        <option value="nifty-fifty-fluid">Nifty Fifty Fluid</option>
      </select>
    </div>
  </div>

  <div class="routine-section hidden" id="pm-routine">
    <h3>PM Routine – The routine that keeps your day from your night</h3>
    <div class="routine-step">
      <label for="pm-cleanse">Cleanse</label>
      <select id="pm-cleanse" class="product-select" data-step="cleanse" data-time="pm">
        <option value="">Select a cleanser</option>
        <option value="juicy-gel">Juicy Gel</option>
        <option value="properly-clean">Properly Clean</option>
        <option value="fancy-face">Fancy Face</option>
      </select>
    </div>
    <div class="routine-step">
      <label for="pm-exfoliate">Exfoliate</label>
      <select id="pm-exfoliate" class="product-select" data-step="exfoliate" data-time="pm">
        <option value="">Select an exfoliator</option>
        <option value="glow-exfoliator">Glow Exfoliator</option>
        <option value="clarifying-exfoliator">Clarifying Exfoliator</option>
        <option value="gentle-exfoliator">Gentle Exfoliator</option>
      </select>
    </div>
    <div class="routine-step">
      <label for="pm-treat">Treat</label>
      <select id="pm-treat" class="product-select" data-step="treat" data-time="pm">
        <option value="">Select a treatment</option>
        <option value="very-amazing-retinal">Very Amazing Retinal</option>
        <option value="de-crease">De-Crease</option>
        <option value="much-plumper-skin">Much Plumper Skin</option>
        <option value="clarifying-face-hero">Clarifying Face Hero</option>
      </select>
    </div>
    <div class="routine-step">
      <label for="pm-nourish">Nourish</label>
      <select id="pm-nourish" class="product-select" data-step="nourish" data-time="pm">
        <option value="">Select a moisturiser</option>
        <option value="face-hero">Face Hero</option>
        <option value="very-luxe-face-cream">Very Luxe Face Cream</option>
        <option value="very-useful-face-cream">Very Useful Face Cream</option>
      </select>
    </div>
  </div>

  <div id="warning-box" class="warning hidden"></div>
</div>