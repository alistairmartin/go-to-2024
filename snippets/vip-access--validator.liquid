{%- for tag in customer.tags -%}
    {%- if tag contains "Rivo VIP Tier: Mate" and settings.vip_access_tier1 -%}
      {%- assign validVIPCustomer = true -%}{% break %}
    {%- endif -%}

    {%- if tag contains "Rivo VIP Tier: Friend" and settings.vip_access_tier2 -%}
        {%- assign validVIPCustomer = true -%}{% break %}
      {%- endif -%}

      {%- if tag contains "Rivo VIP Tier: Bestie" and settings.vip_access_tier3 -%}
        {%- assign validVIPCustomer = true -%}{% break %}
      {%- endif -%}

      {%- if tag contains "Rivo VIP Tier: BFF" and settings.vip_access_tier4 -%}
        {%- assign validVIPCustomer = true -%}{% break %}
      {%- endif -%}

      {%- if tag contains "Rivo VIP Tier: Peach Friend" and settings.vip_access_tier5 -%}
        {%- assign validVIPCustomer = true -%}{% break %}
      {%- endif -%}

      {%- if tag == "staff" and settings.vip_access_staff -%}
        {%- assign validVIPCustomer = true -%}{% break %}
      {%- endif -%}
{%- endfor -%}


{%- if variable -%}
  {{ validVIPCustomer }}
{%- endif -%}
