
{%- assign showSection = true -%}

{%- if blog -%}
  {%- if canonical_url contains "?page=" or canonical_url contains "/tagged/" -%}
    {%- assign showSection = false -%}
  {%- endif -%}

  {%- if canonical_url contains "?page=1" -%}
    {%- assign showSection = true -%}
  {%- endif -%}
{%- endif -%}

{%- if showSection -%}

    <style>
    #shopify-section-{{ section.id }} {
      /* Duration drives the ring/progress animation; seconds expected */
      --section-autoplay-duration: {{ section.settings.slide_autoplay_speed | divided_by: 1000.0 }}s;
      --section-animation-play-state: paused;
      --progress-bar-color: 255,255,255;
    }
  </style>
  
<div class="custom-section {% if section.settings.hide_desktop %}hide-desktop{% endif %} {% if section.settings.hide_mobile %}hide-mobile{% endif %}">


  {% if section.settings.enable_slideshow %}

    <slide-show reveal-on-scroll {% if section.settings.autoplay %}auto-play{% endif %} transition-type="{{ section.settings.transition_type | default: 'sweep' }}" class="slideshow slideshow--auto">
      <div class="slideshow__slide-list">
        {% for block in section.blocks %}
          {% capture block_content %}{% render block %}{% endcapture %}

          {%- capture slide_attributes -%}
            {{ block.shopify_attributes }}
            id="block-{{ section.id }}-{{ block.id }}"
            class="slideshow__slide {% if section.settings.transition_type == 'sweep' %}slideshow__slide--sweep{% endif %}"
            {% unless forloop.first %}hidden{% endunless %}
          {%- endcapture -%}

          <slide-show-item reveal-visibility {{ slide_attributes }}>
            <div class="slideshow__slide-inner">
              {{ block_content }}
            </div>
          </slide-show-item>
        {% endfor %}
      </div>

      {% if section.blocks.size > 1 %}
        <page-dots {% if section.settings.autoplay %}animation-timer{% endif %} class="slideshow__nav container">
          {% for block in section.blocks %}
            <button class="slideshow__progress-bar" aria-controls="block-{{ section.id }}-{{ block.id }}" {% if forloop.first %}aria-current="true"{% endif %}>
              <span class="visually-hidden">{{ 'general.accessibility.go_to_slide' | t: num: forloop.index }}</span>
            </button>
          {% endfor %}
        </page-dots>
      {% endif %}
    </slide-show>
  {% else %}
    {% for block in section.blocks %}
      {% render block %}
    {% endfor %}
  {% endif %}

  


</div>
{% endif %}


{% schema %}
{
  "name": "Custom Slideshow",
  "class": "shopify-section--custom-slideshow",
  "blocks": [
    { "type": "@theme" },
    { "type": "@app" }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Hide Mobile?"
    },
    {
      "type": "checkbox",
      "id": "hide_desktop",
      "label": "Hide Desktop?"
    },
    {
      "type": "header",
      "content": "Slideshow"
    },
    {
      "type": "checkbox",
      "id": "enable_slideshow",
      "label": "Enable Slideshow?"
    },
    {
      "type": "select",
      "id": "transition_type",
      "label": "Transition type",
      "options": [
        { "value": "sweep", "label": "Sweep" },
        { "value": "reveal", "label": "Reveal" },
        { "value": "fade", "label": "Fade" }
      ],
      "default": "sweep"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto rotate between slides",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_slideshow_arrows",
      "label": "Enable Slidshow Arrows?",
      "default": true
    },
    {
      "type": "text",
      "id": "slide_autoplay_speed",
      "label": "Autoplay Speed (Milliseconds)",
      "info": "e.g. 4000 = 4 Seconds",
      "default": "3000"
    }
  ],
  "presets": [
    {
      "name": "Custom Slideshow"
    }
  ]
}
{% endschema %}

