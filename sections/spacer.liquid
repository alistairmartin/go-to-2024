<section class="spacer" id="{{ section.id }}"></section>
<style>
  #shopify-section-{{ section.id }} {
    background: {{ section.settings.color_mobile }};
    height: {{ section.settings.height_mobile }}px;
  }

  @media screen and (min-width: 1139px) {
    #shopify-section-{{ section.id }} {
      background: {{ section.settings.color_desktop }};
      height: {{ section.settings.height_desktop }}px;
    }
  }
</style>
{% schema %}
{
  "name": "Spacer",
  "settings": [
    {
      "type": "header",
      "content": "Colour"
    },
    {
      "type": "color",
      "id": "color_desktop",
      "label": "Colour (Desktop)"
    },
    {
      "type": "color",
      "id": "color_mobile",
      "label": "Colour (Mobile)"
    },
    {
      "type": "header",
      "content": "Height"
    },
    {
      "type": "range",
      "label": "Height (Desktop)",
      "id": "height_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 36
    },
    {
      "type": "range",
      "label": "Height (Mobile)",
      "id": "height_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}