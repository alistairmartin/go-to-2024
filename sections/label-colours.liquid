<style>
  {% for block in section.blocks %}
      body.{{ block.settings.brand }} .label--{{ block.settings.title | handle }} {
        background: {{ block.settings.color_background }} !important;
        color: {{ block.settings.color_text }} !important;
        {% if block.settings.hide_label %}
          display: none !important;
        {% endif %}
      }
  {% endfor %}
</style>

{% schema %}
  {
    "name": "Label Colours",
    "blocks": [
      {
        "type": "label-item",
        "name": "Label Item",
        "settings": [
          {
          "type": "radio",
          "id": "brand",
          "label": "Brand",
          "options": [
            {
              "value": "go-to",
              "label": "üü™ Go-To"
            },
            {
              "value": "bro-to",
              "label": "üü• Bro-To"
            },
            {
              "value": "gro-to",
              "label": "üü© Gro-To"
            }
          ]
        },
          {
            "type": "checkbox",
            "id": "hide_label",
            "label": "Hide Label?"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Tag Name / Metafield",
            "info": "Everything after the '__label:' or '__label2:'"
          },
          {
            "type": "color",
            "id": "color_text",
            "label": "Text",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "color_background",
            "label": "Background",
            "default": "#000000"
          }
        ]
      },
      {
      "type": "note",
      "name": "üìù Block Note",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Block Note",
          "info": "Only Admin Will See This.",
          "default": "üü™ --- Go-To ---"
        }
      ]
    }
    ]
  }
{% endschema %}