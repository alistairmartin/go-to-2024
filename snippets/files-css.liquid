{% comment %} {%- render "fonts" -%} {% endcomment %}
{%- render "fonts--original" -%}
{%- render "fonts--custom" -%}

<link rel="stylesheet" href="{{ 'global.css' | asset_url }}">

{%- if blog or article -%}
<link rel="stylesheet" href="{{ 'blogs.css' | asset_url }}">
{%- endif -%}

{%- if template == "gift_card" -%}
    <link rel="stylesheet" href="{{ 'giftcard.css' | asset_url }}">
{%- endif -%}

{%- if article -%}
<link rel="stylesheet" href="{{ 'articles.css' | asset_url }}">
{%- endif -%}

{% if template.suffix == "build-your-routine" %}
<link rel="stylesheet" href="{{ 'byo-bundle.css' | asset_url }}">
{%- endif -%}

{%- if template.suffix == "styleguide" -%}
    <link rel="stylesheet" href="{{ 'styleguide.scss.css' | asset_url }}">
{%- endif -%}

{%- if template contains "customer" -%}
<link rel="stylesheet" href="{{ 'loyalty.css' | asset_url }}">
{%- endif -%}

{%- if page.handle contains "go-to-gang" -%}
    <link rel="stylesheet" href="{{ 'loyalty-landing.css' | asset_url }}">
{%- endif -%}


{%- if brand == "bro-to" -%}
    <link rel="stylesheet" href="{{ 'brand--bro-to.css' | asset_url }}">
{%- elsif brand == "gro-to" -%}
    <link rel="stylesheet" href="{{ 'brand--gro-to.css' | asset_url }}">
{%- endif -%}

{%- if product -%}
    <link rel="stylesheet" href="{{ 'products.css' | asset_url }}">
  {%- endif -%}

  {%- if product -%}
    {%- render 'okendo-reviews-css', brand: brand -%}
{%- endif -%}

  {%- if collection -%}
    <link rel="stylesheet" href="{{ 'collections.css' | asset_url }}">
  {%- endif -%}


{%- assign glitterTemplateSettings = settings.show_glitter_on_template | split: "," -%}
{%- capture templateName -%}{{ template.name }}.{{ template.suffix }}{%- endcapture -%}
{%- for glitterTemplate in glitterTemplateSettings -%}
  {%- if templateName == glitterTemplate -%}
    {%- assign showGlitter = true -%}
  {%- endif -%}
{%- endfor -%}

{%- if settings.show_glitter and showGlitter == true -%}
    <link rel="stylesheet" href="{{ 'glitter.css' | asset_url }}">
{%- endif -%}