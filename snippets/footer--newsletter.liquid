{% comment %} {
  "type": "text",
  "id": "klaviyo_list_id",
  "label": "The Klaviyo mailing list ID",
  "info": "Login to your Klaviyo account and select the ID of the mailing list you want"
} {% endcomment %}

{% comment %} <form method="post" id="klaviyo-subscribe-footer" class="footer__newsletter-form form" action="//manage.kmail-lists.com/subscriptions/subscribe?a={{ settings.klaviyo_api_key }}&g={{ block.settings.klaviyo_list_id }}" target="_blank">
<div class="klaviyo-subscribe-form">
  {%- liquid
    case brand
      when 'bro-to'
        assign contactBrand = 'broto'
        assign placeholder = 'hey@brotoskincare.com'

      when 'gro-to'
        assign contactBrand = 'groto'
        assign placeholder = 'cutie@grotoskincare.com'
      else
        assign contactBrand = 'goto'
        assign placeholder = 'cutehead@gotoskincare.com'
    endcase
  -%}
  <input type="hidden" name="g" value="{{ block.settings.klaviyo_list_id }}">
  <input type="hidden" name="$fields" value="brandpreference{{ contactBrand }},$source">
  <label for="klaviyo_form_brandpreference{{ contactBrand }}"></label>
  <input type="hidden" name="brandpreference{{ contactBrand }}" value="true" id="klaviyo_form_brandpreference{{ contactBrand }}">
  <label for="klaviyo_form_$source"></label>
  <input type="hidden" name="$source" value="{{ contactBrand }} {{ region }} Footer" id="klaviyo_form_$source">
  <input type="email" name="email" id="k_id_email" placeholder="{{ placeholder }}" required />
  <button type="submit"></button>
  <p style="display:none" class="success_message Alert Alert--success"></p>
  <p style="display:none" class="error_message Alert Alert--error"></p>
</div>
</form> {% endcomment %}


