<style>
  #shopify-section-{{ section.id }} .image-tile {
    --gridDesktop: {{ section.blocks.size }};
  }
</style>

<section class="section">
  <div class="container">

         <h3 class="heading h2 text-align--left">{{ section.settings.title }}</h3>

          <div class="image-tile">
            {%- for block in section.blocks -%}
              <div class="image-tile--item">
                {%- capture class_attribute -%}{% if block.settings.mobile_image != blank %}hide-mobile{% endif %}{%- endcapture -%}
                {%- capture sizes_attribute -%}(max-width: 999px) 100vw, 100vw{%- endcapture -%}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', sizes: sizes_attribute, widths: '600,700,800,1000,1200,1400,1600,1800,2000', class: class_attribute }}

                {%- if block.settings.mobile_image != blank -%}
                {%- capture class_attribute -%}hide-desktop{%- endcapture -%}
                {%- capture sizes_attribute -%}(max-width: 999px) 100vw, 100vw{%- endcapture -%}
                    {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag: loading: 'lazy', sizes: '100vw', widths: '600,700,800,1000', class: class_attribute }}
                {%- endif -%}

                <div class="image-tile--item-container">
                  <h4 class="image-tile--item-title">{{ block.settings.title }}</h4>
                  <div class="image-tile--item-description">
                    {{ block.settings.description }}
                  </div>
                </div>


              </div>
            {%- endfor -%}
          </div>
  </div>
</section>


{% schema %}
  {
    "name": "Image Tiles",
    "class": "shopify-section--image-tiles",
    "disabled_on": {
      "groups": ["header", "custom.overlay"]
    },
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "blocks": [
      {
        "type": "tile",
        "name": "Tile",
        "settings": [
          {
            "type": "header",
            "content": "Image"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Image (Mobile)"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Tiles",
        "blocks": [],
        "settings": {}
      }
    ]
  }
{% endschema %}