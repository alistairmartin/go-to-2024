{%- capture styles -%}
<style>
  #shopify-section-{{ section.id }} {
    --section-background-mobile: {{ section.settings.background_mobile }};
    --section-background-desktop: {{ section.settings.background_desktop }};

    --paddingVerticalMobile: {{ section.settings.padding_vertical_mobile }}px;
    --paddingHorizontalMobile: {{ section.settings.padding_horizontal_mobile }}px;

    --paddingVerticalDesktop: {{ section.settings.padding_vertical_desktop }}px;
    --paddingHorizontalDesktop: {{ section.settings.padding_horizontal_desktop }}px;

    --position-desktop: {{ section.settings.position_desktop }};
    --position-mobile: {{ section.settings.position_mobile }};
  }
</style>
{%- endcapture -%}
{{- styles | strip_newlines | remove:" " | strip -}}

<section class="{% if section.settings.hide_desktop %}hide-desktop{% endif %} {% if section.settings.hide_mobile %}hide-mobile{% endif %}" {% if section.settings.id != blank %}id="{{ section.settings.id }}"{% endif %}> 

  {%- if section.settings.enable_container -%}
    <div class="container">
  {%- endif -%}

  {%- for block in section.blocks -%}
    {%- capture blockId -%}id="block-{{ block.id }}"{%- endcapture -%}

    {%- comment -%} CONTAINERS --- START  {%- endcomment -%}
    {%- include "blocks--containers" -%}
    {%- comment -%} CONTAINERS --- END  {%- endcomment -%}

    {%- include "blocks--images" -%}
    {%- include "blocks--video" -%}
    {%- include "blocks--image-text-overlay" -%}
    {%- include "blocks--text" -%}
    {%- include "blocks--product-item" -%}
    {%- include "blocks--product-ATC" -%}
    {%- include "blocks--button" -%}
    {%- include "blocks--spacer" -%}
    {%- include "blocks--liquid" -%}
  {%- endfor -%}


  {%- comment -%} Button Modal --- START  {%- endcomment -%}
  {%- for block in section.blocks -%}
    {%- if block.type == "button" and block.settings.modal_content != blank -%}
      {%- assign modalId = block.settings.button_text | handle -%}
      {%- assign buttonId = block.id | prepend: "block-" -%}
      {%- assign content_square_id = block.settings.content_square_id -%}
      {%- render 'modal', modalId: modalId, content: block.settings.modal_content, buttonId: buttonId, content_square_id:content_square_id -%}
    {%- endif -%}
  {%- endfor -%}
  {%- comment -%} Button Modals --- START  {%- endcomment -%}


  {%- if section.settings.enable_container -%}
    </div>
  {%- endif -%}

</section>

