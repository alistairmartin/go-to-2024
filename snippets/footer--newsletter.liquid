<form method="post" id="klaviyo-subscribe-footer" class="footer__newsletter-form form" action="//manage.kmail-lists.com/subscriptions/subscribe?a={{ settings.klaviyo_api_key }}&g={{ block.settings.klaviyo_list_id }}" target="_blank">
<div class="klaviyo-subscribe-form">
  {%- liquid
    case brand
      when 'bro-to'
        assign contactBrand = 'broto'
        assign placeholder = 'hey@brotoskincare.com'

      when 'gro-to'
        assign contactBrand = 'groto'
        assign placeholder = 'cutie@grotoskincare.com'
      else
        assign contactBrand = 'goto'
        assign placeholder = 'cutehead@gotoskincare.com'
    endcase
  -%}
  <input type="hidden" name="g" value="{{ block.settings.klaviyo_list_id }}">
  <input type="hidden" name="$fields" value="brandpreference{{ contactBrand }},$source">
  <label for="klaviyo_form_brandpreference{{ contactBrand }}"></label>
  <input type="hidden" name="brandpreference{{ contactBrand }}" value="true" id="klaviyo_form_brandpreference{{ contactBrand }}">
  <label for="klaviyo_form_$source"></label>
  <input type="hidden" name="$source" value="{{ contactBrand }} {{ region }} Footer" id="klaviyo_form_$source">
  <input type="email" name="email" id="k_id_email" placeholder="{{ placeholder }}" required />
  <button type="submit"></button>
  <p style="display:none" class="success_message Alert Alert--success"></p>
  <p style="display:none" class="error_message Alert Alert--error"></p>
</div>
</form>

{% comment %} 
             {%- form 'customer', id: 'footer-newsletter', class: 'footer__newsletter-form form' -%}
                    {%- if form.posted_successfully? -%}
                      <div class="form__banner banner banner--success">
                        <span class="banner__ribbon">{% render 'icon' with 'form-success' %}</span>
                        <p class="banner__content">{{ 'footer.newsletter.success' | t }}</p>
                      </div>
                    {%- else -%}
                      {%- if form.errors -%}
                        <div class="form__banner banner banner--error">
                          <span class="banner__ribbon">{% render 'icon' with 'form-error' %}</span>
                          <p class="banner__content">{{ form.errors.translated_fields['email'] }} {{ form.errors.messages['email'] }}</p>
                        </div>
                      {%- endif -%}

                      <input type="hidden" name="contact[tags]" value="newsletter">

                      <div class="input">
                        <input type="email" id="footer[contact][email]" name="contact[email]" class="input__field input__field--text">
                        <label for="footer[contact][email]" class="input__label">{{ 'footer.newsletter.email' | t }}</label>
                        <button type="submit" class="input__submit-icon tap-area" title="{{ 'footer.newsletter.submit' | t }}">{% render 'icon' with 'nav-arrow-right', direction_aware: true %}</button>
                      </div>
                    {%- endif -%}
                  {%- endform -%} {% endcomment %}